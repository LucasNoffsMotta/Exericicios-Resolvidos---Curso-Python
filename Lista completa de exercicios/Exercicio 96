def area(c,l):
    a = c*l
    print(f'A area do terreno de {c:.2f}x{l:.2f} = {a:.2f} m2.')

def mensagem(msg):
    print('-'*len(msg))
    print(msg)
    print('-'*len(msg))


c = float(input('Comprimento do terreno (m) = '))
l = float(input('Largura do terreno (m)= '))


mensagem('CONTROLE DE TERRENO')
area(c,l)
